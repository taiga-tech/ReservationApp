.Form
  .card
    %h1.card-header= @title
    = form_with model: @stylist, class: "card-body", local: true  do |f|
      - if @stylist.errors.any?
        %ul.error.white
          %p 必須項目
          - @stylist.errors.full_messages.each do |message|
            %li= "※#{message}"
      .form-group.card-title
        = f.label :name do
          名前
        = f.text_field :name, class: "form-control"
      .form-group
        = f.label :position do
          Position
        = f.text_field :position, class: "form-control"
      .form-group
        = f.label :comment do
          自己紹介
        = f.text_area :comment, class: "form-control", rows: "5"
      .form--group
        = f.label :image do
          = icon("fas", "images", class: "imageicon")
          プロフィール画像
        = f.file_field :image
      = f.submit "送信", class: "btn btn-outline-info"
