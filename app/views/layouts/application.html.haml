    %link{href: "https://fonts.googleapis.com/css2?family=Shadows+Into+Light&display=swap", rel: "stylesheet"}/
    %link{href:  "//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css", rel:  "stylesheet", type:  "text/css"}/
    %link{href:  "//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css", rel:  "stylesheet", type:  "text/css"}/
    %script{src:  "//cdn.jsdelivr.net/npm/slick-carousel@1.8\n", type:  "text/javascript"}
    %script{crossorigin: "anonymous", integrity: "sha512-ePSfiGQMIzYzXVQLqWoVC3yxVEHIM5Y3EGh9jPNxpf+hPuLtzPdxJX+lTC3ziPMlDgc5OsM4JThxGwN2DkWEeA==", src: "https://cdnjs.cloudflare.com/ajax/libs/pace/1.0.2/pace.min.js"}
